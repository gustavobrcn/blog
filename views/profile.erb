<h1>Hello <%= session[:username]%></h1>

<form action="/user" method="POST">
    <input type="text" name="searched_user" placeholder="Search For Users">
    <input type="submit" value="Find User">
</form>

<form action='/profile' method='POST'>
    <input type="text" name='content' place="Enter a post">
    <input type="submit" value="Post">
</form>


<% @user.posts.order(created_at: :desc).limit(20).each do |post|%>
    <div class="user-posts">
        <h4><%= post.content %> </h4>
    </div>
<% end %>

<% @friend_posts.each do |post| %>
    <div class="friends-posts">
        <h3><%= post.username %></h3>
        <p><%= post.content %><p>
    <div>
<% end %>