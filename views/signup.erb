<form action='/signup' method="POST">
   <input type="text" name="user[first_name]" placeholder="First Name"><br>
   <input type="text" name="user[last_name]" placeholder="Last Name"><br>
   <input type="date" name="user[birthday]"><br>
   <input type="radio" name="user[sex]" value="Male">Male
   <input type="radio" name="user[sex]" value="Female">Female<br>
   <input type="email" name="user[email]" placeholder="Email"><br>
   <input type="text" name="user[username]" placeholder="Username"><br> 
   <input type="text" name="user[password]" placeholder="Password"><br>
   <input type="submit" value="Create Account"><br>
</form>
